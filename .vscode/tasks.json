{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "vite: dev",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "server: dev",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"options": {
				"cwd": "${workspaceFolder}/server"
			},
			"isBackground": true,
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "dev: all",
			"dependsOn": [
				"server: dev",
				"vite: dev"
			],
			"dependsOrder": "parallel",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "build",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build"
			],
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "ngrok: vite",
			"type": "shell",
			"command": "ngrok",
			"args": [
				"http",
				"http://localhost:5173",
				"--log=stdout"
			],
			"isBackground": true,
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "share: dev+ngrok",
			"dependsOn": [
				"server: dev",
				"vite: dev",
				"ngrok: vite"
			],
			"dependsOrder": "parallel",
			"group": {
				"kind": "build"
			}
		},
		{
			"label": "server: restart",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"isBackground": true,
			"group": "build"
		},
		{
			"label": "ngrok: vite:5174",
			"type": "shell",
			"command": "ngrok",
			"args": [
				"http",
				"http://localhost:5174",
				"--log=stdout"
			],
			"isBackground": true,
			"group": "build"
		}
	]
}